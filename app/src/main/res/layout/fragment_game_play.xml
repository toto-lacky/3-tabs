<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/board"
            android:scaleType="center"/>

<!--        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/game_logo">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/menu_button"
                android:background="@drawable/menu_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/game_logo"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/game_board"
            android:layout_height="@dimen/game_board"
            android:layout_below="@id/game_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/game_board">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/board_inside"
                android:id="@+id/board_image"/>

            <ImageView
                android:id="@+id/block1"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/block_1" />

            <ImageView
                android:id="@+id/block2"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/block_2" />

            <ImageView
                android:id="@+id/block3"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/block_3" />

            <ImageView
                android:id="@+id/block4"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/block_4" />

            <ImageView
                android:id="@+id/block5"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/block_5" />

            <ImageView
                android:id="@+id/block6"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/block_6" />

            <ImageView
                android:id="@+id/block7"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/block_7" />

            <ImageView
                android:id="@+id/block8"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/block_8" />

            <ImageView
                android:id="@+id/block9"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/block_9" />

            <ImageView
                android:id="@+id/block10"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/block_10" />

            <ImageView
                android:id="@+id/block11"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/block_11" />

            <ImageView
                android:id="@+id/block12"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/block_12" />

            <ImageView
                android:id="@+id/block13"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="300dp"
                android:src="@drawable/block_13" />

            <ImageView
                android:id="@+id/block14"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="300dp"
                android:src="@drawable/block_14" />

            <ImageView
                android:id="@+id/block15"
                android:layout_width="@dimen/game_block"
                android:layout_height="@dimen/game_block"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="300dp"
                android:src="@drawable/block_15" />

        </RelativeLayout>

        <!--        </LinearLayout>-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pause_screen"
        android:alpha="1"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/pause_background" />

        <Button
            android:id="@+id/resume_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/resume_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <Button
            android:id="@+id/restart_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/restart_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <Button
            android:id="@+id/image_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/image_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
</FrameLayout>