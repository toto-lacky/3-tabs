<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/elem_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dip"
        android:contentDescription="TODO"
        android:src="@drawable/def_icon"
        android:layout_marginEnd="6dip"/>

    <ImageView
        android:id="@+id/circle_mask"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dip"
        android:contentDescription="TODO"
        android:src="@drawable/circle_mask"
        android:layout_marginEnd="6dip"/>

    <TextView
        android:id="@+id/elem_addr"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/elem_icon"
        android:ellipsize="marquee"
        android:text="@string/default_address"
        android:textSize="12sp"
        android:singleLine="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/elem_icon" />

    <TextView
        android:id="@+id/elem_name"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_above="@id/elem_addr"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/elem_icon"
        android:gravity="center_vertical"
        android:text="@string/default_name"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/elem_icon" />

</RelativeLayout>